{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Better Styled",
  "description": "Type-safe styled components with variant propagation for React and React Native",
  "favicon": "./assets/favicon.svg",
  "fonts": {
    "family": "Geist"
  },
  "colors": {
    "primary": "#623791",
    "light": "#623791",
    "dark": "#623791"
  },
  "styling": {
    "codeblocks": {
      "theme": {
        "light": "min-light",
        "dark": "synthwave-84"
      }
    }
  },
  "background": {
    "decoration": "grid"
  },
  "logo": {
    "light": "/assets/logo_light.svg",
    "dark": "/assets/logo_dark.svg",
    "href": "/introduction"
  },
  "redirects": [
    {
      "source": "/",
      "destination": "/introduction"
    }
  ],
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "introduction",
          "installation",
          "quickstart",
          "comparison"
        ]
      },
      {
        "group": "Core Concepts",
        "pages": [
          "concepts/styled",
          "concepts/variants",
          "concepts/context",
          "concepts/slots"
        ]
      },
      {
        "group": "Guides",
        "pages": [
          "guides/react-native",
          "guides/typescript",
          "guides/best-practices"
        ]
      },
      {
        "group": "AI Integration",
        "pages": [
          "ai/overview",
          "ai/llms-txt",
          "ai/skill-md",
          "ai/mcp-server"
        ]
      },
      {
        "group": "API Reference",
        "pages": [
          "api/styled",
          "api/create-styled-context",
          "api/with-slots",
          "api/utilities"
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/brunowilliang/better-styled",
        "icon": "github"
      }
    ],
    "primary": {
      "type": "button",
      "label": "npm",
      "href": "https://www.npmjs.com/package/better-styled"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/Brunowgarcia",
      "linkedin": "https://linkedin.com/in/brunowilliang",
      "github": "https://github.com/brunowilliang/better-styled"
    }
  },
  "errors": {
    "404": {
      "title": "Page not found",
      "description": "The page you are looking for does not exist.",
      "redirect": false
    }
  }
}