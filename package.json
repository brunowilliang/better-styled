{
  "name": "better-styled-monorepo",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "packages/*",
    "!packages/lib-old",
    "!packages/lib-v2-old",
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "bench": "turbo run bench",
    "docs": "cd apps/docs && npx mintlify dev",
    "lint": "biome check ./packages/lib",
    "format": "biome format ./packages/lib --write",
    "release": "cd packages/lib && bun run release",
    "release:beta": "cd packages/lib && bun run release:beta",
    "release:dry": "cd packages/lib && bun run release:dry"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "turbo": "^2.5.0",
    "typescript": "^5.0.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  }
}