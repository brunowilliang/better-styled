{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"noEmit": true,
		"types": [
			"bun-types",
			"@testing-library/jest-dom",
			"@types/react"
		]
	},
	"include": [
		"*.ts",
		"src/**/*.ts",
		"src/**/*.tsx"
	]
}